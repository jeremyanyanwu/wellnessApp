rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own daily check-ins
    match /dailyCheckins/{userId} {
      // Only allow the authenticated user to access their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can write their own check-in history
    match /checkinHistory/{historyId} {
      // Only allow authenticated users to write their own history
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users can read their own history
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow authenticated users to read/write their own profile data
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write their own wellness data
    match /wellnessData/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write their own user preferences
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

